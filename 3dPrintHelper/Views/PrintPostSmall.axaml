<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
             x:Class="_3dPrintHelper.Views.PrintPostSmall">
	<DockPanel Width="300" Height="250" Name="Panel" Background="Red">
		<StackPanel DockPanel.Dock="Top" Height="40" VerticalAlignment="Center" >
			<Label FontSize="18" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="40" Name="Title">Hello</Label>
		</StackPanel>
		<Panel>
			<Image Width="300" Height="210" Name="Background" Stretch="UniformToFill"  />
			<StackPanel Orientation="Horizontal" Height="40" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="ButtonRow" Spacing="10">
				<Button Name="QuickAction" Content="Hello" Classes="HoverBlack" />
				<Button Name="FullView" Content="Info" Classes="HoverBlack" />
			</StackPanel>
		</Panel>

	</DockPanel>
</UserControl>
